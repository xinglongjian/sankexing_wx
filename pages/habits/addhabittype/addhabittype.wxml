<!--pages/habits/addhabit/addhabit.wxml-->
<view id='addhabittype'>
  <form bindsubmit='formSubmit' bindreset='formReset'>
         
        <view class="section">  
            <view class="section_title">类型名称:</view>  
            <view class='form-group'>  
                <input type="text" class="input-text" name="name" placeholder="请输入习惯类型名称" />  
            </view>      
        </view>  
        <view class="section">  
            <view class="section_title">类型编码:</view>  
            <view class='form-group'>  
                <input type="text" class="input-text" name="code" placeholder="请输入习惯类型编码" />  
            </view>      
        </view>
        <view class="section" style='height:100px;'>  
            <view class="section_title">类型描述:</view>  
            <view class='form-group'>  
                <textarea name="description" placeholder="类型描述" maxlength='140' style='width:100%;height:100px'/>
            </view>      
        </view>  
        <view class="section">  
            <view class="section_title">是否启用:</view>  
            <view class='form-group'>  
                <switch name="status" checked='true'/> 
            </view>      
        </view> 
        <view class="section btn-area">  
            <button formType="submit">提交</button>  
            <button formType="reset">清空</button>  
        </view> 
  </form>
</view>

