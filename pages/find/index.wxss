/* pages/find/index.wxss */
page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 100rpx; 
} 
.navbar .item.active{ 
 color: #000; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 5rpx; 
 background: #1296db; 
} 

.tabpage {
   background: #eeeeee;
}

.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/*课程*/
.course-area {
  margin-top: 15px;
  border: 1px;
  width: 100%;
  height: 200rpt;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.course-area .title{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  justify-content: space-between; 
  padding-left: 10px;
  padding-right: 10px;
}
.course-area .title text {
  width: 50%;
}
.course-area .title image {
  width: 16px;
  height: 16px;
}
.course-area .body{
  display: flex;
  flex-direction: row;
  height: 100rpt;
}