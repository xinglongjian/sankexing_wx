/* pages/grade/index.wxss */
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.baseinfo{
  background: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpt;
  margin-top: 15px;
}

.baseinfo .title{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  justify-content: space-between; 
  padding-left: 10px;
  padding-right: 10px;
}
.baseinfo .title text {
  width: 50%;
}
.baseinfo .title image {
  width: 16px;
  height: 16px;
}

/*操作按钮*/
.operation {
  height: 50px;
  width: 100%;
  background: #1296db;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 15px;
  color: #fff;
  
}

.operation view.line {
  height: 25px;
  width: 1px;
  background: #fff;
}