<!--pages/grade/index.wxml-->
<!--班级-->
<view class='container'>
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
        <block wx:for="{{movies}}" wx:for-index="index">    
          <swiper-item>    
            <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>    
          </swiper-item>    
        </block>    
  </swiper>

  <!--操作按钮-->
  <view class='operation'>
     <view>加入</view>
     <view class='line'></view>
     <view>退学</view>
     <view class='line'></view>
     <view>转让</view>
  </view>

  <!--基本信息-->
  <view class='baseinfo'>
    <view class='title'>
      <text>基本信息</text>
      <image src='/images/more_16_.png'></image>
    </view>
    <view class='body'>
      <view class='item'>
        <view>班级名称:{{grade.name}}</view>
        <view>学校名称:{{grade.organ}}</view>
        <view>课程名称:{{grade.course}}</view>
        <view>开课时间:{{grade.openDate}}</view>
      </view>
      <view class='item'>
        <view>结课时间:{{grade.closeDate}}</view>
        <view>教室名称:{{grade.classRoom}}</view>
        <view>已上课次:{{grade.finishedNum}}</view>
        <view>剩余课次:{{grade.leftNum}}</view>
      </view>
    </view>
  </view>

  <!--任课老师-->
  <view class='teacher'>
    <view class='title'>任课教师</view>
    <view class='body'>
      <view class='item'>
       <image src='/images/default_head.jpg'></image>
       <view class='info'>
          <text>张老师(主教)</text>
       </view>
    </view>
    <view class='item'>
       <image src='/images/default_head.jpg'></image>
       <view class='info'>
          <text>李老师(辅导)</text>
       </view>
    </view>
    </view>
  </view>

  <!--历史课堂-->
  <view class='historyclass'>
    <view class='title'>
      <text>历史课堂</text>
      <image src='/images/more_16_.png'></image>
    </view>
    <view class='body'>
      <view class='item'>
        <view>序号:2</view>
        <view>时间:{{grade.openDate}}</view>
        <image src='/images/more_16_.png'></image>
      </view>
      <view class='item'>
        <view>序号:1</view>
        <view>时间:{{grade.openDate}}</view>
        <image src='/images/more_16_.png'></image>
      </view>
    </view>
  </view>

  <!--最新动态-->
  
</view>
