/* pages/grade/photo/photo.wxss */
page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 100rpx; 
} 
.navbar .item.active{ 
 color: #000; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 5rpx; 
 background: #1296db; 
} 

.tabpage {
   background: #fff;
   margin-top: 10px;
   height: 100%;
}

.upload {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  top: 60px;
  right: 10px;

}
.upload image{
  width: 40px;
  height: 40px;
}

/*最新上传*/
.uploader {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}

.headimage{
   width: 36px;
   height: 36px;
   border-radius: 50%;
}
.author{
  margin-left: 20rpx;
}
.author .date{
  font-size: 26rpx;
}

.photos {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: auto;
  padding: 0px 0px 10rpx 10rpx;
}

.photo {
  width: 230rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-right: 10rpx;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ededed;
  position: relative;
}

.photo image {
  width: 230rpx;
  height: 230rpx;
}
.album{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #ededed;
  padding: 10rpx;
}
.album image{
  width: 40px;
  height: 40px;
}
.album .count{
  font-size: 30rpx;
}