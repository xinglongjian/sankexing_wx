<!--pages/grade/photos/newalbum/newalbum.wxml-->
<form bindsubmit='formSubmit' bindreset="formReset">
  <zan-panel class="cell-panel-demo">
    <view class='zan-cell zan-field'>
      <view class='zan-cell__hd zan-field__title'>相册名称：</view>
      <input type='text' name="name" placeholder="名称" class='zan-field__input zan-cell__bd'></input>
    </view>
    <view class='zan-cell zan-field'>
      <view class='zan-cell__hd zan-field__title'>相册描述：</view>

      <textarea name="info" auto-height='true' class='zan-field__input zan-cell__bd' placeholder='写点描述(可选)'>

      </textarea>
      <!-- <input type='text' name="name" placeholder="名称" class='zan-field__input zan-cell__bd'></input> -->
    </view>
  </zan-panel>

  <zan-button-group>
    <button type="primary" form-type="submit">提交</button>
  </zan-button-group>
</form>