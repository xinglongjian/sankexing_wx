/* pages/grade/photos/upload/upload.wxss */
@import "/third/zanui/dist/index.wxss";

.content {
  width: 95%;
  padding: 30rpx;
  font-size: 14px;
  height: 160rpx;
}

.photos {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: auto;
  padding: 0px 0px 10rpx 10rpx;
}

.photo {
  width: 230rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-right: 10rpx;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ededed;
  position: relative;
}

.photo image {
  width: 230rpx;
  height: 230rpx;
}

.photo .delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.photo view {
  font-size: 14px;
  margin-top: 10rpx;
}

.camera {
  width: 32rpx;
  height: 32rpx;
}
