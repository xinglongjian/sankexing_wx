.userinfo {
  vertical-align: middle;
  width: 20%;
}
.notification {
  display: flex;
  flex-direction: row;
  height: 30px;
}

.mychilds{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 10px;
  margin-top: 10px;
}
.headimage{
   width: 36px;
   height: 36px;
   border-radius: 50%;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.grade {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: left;
}
progress {
  display: block;
}

.notification {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 10px;
  margin-top: 10px;
}
.notification .item {
  margin-left: 10px;
  margin-bottom: 5px;
}
.notification text {
  margin-left: 10px;
  margin-bottom: 5px;
}

.myclasses {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  padding-left: 10px;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
}
.myclasses .item {
  margin-top: 10rpx;
}

.activities {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  padding-left: 10px;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
}
.activities .item {
  margin-top: 10rpx;
}

.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

/*课程-----------------------------------------------*/
.course-area {
  margin-top: 15px;
  border: 1px;
  width: 100%;
  height: 200rpt;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.course-area .title{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  justify-content: space-between; 
  padding-left: 10px;
  padding-right: 10px;
}
.course-area .title text {
  width: 50%;
}
.course-area .title image {
  width: 16px;
  height: 16px;
}
.course-area .body{
  display: flex;
  flex-direction: row;
  height: 100rpt;
}