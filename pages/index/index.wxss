/**index.wxss**/
.overview {
  background-color: #1296db;
  height: 180rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content:space-around;
}

.userinfo {
  vertical-align: middle;
  width: 20%;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.grade {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: left;
}
progress {
  display: block;
}

.notification {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 10px;
}
.notification .item {
  margin-left: 10px;
  margin-bottom: 5px;
}
.notification text {
  margin-left: 10px;
  margin-bottom: 5px;
}

.myclasses {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  padding-left: 10px;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
}
.myclasses .item {
  margin-top: 10rpx;
}

.activities {
  margin-top: 20rpx;
  width: 100%;
  background: #fff;
  padding-left: 10px;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
}
.activities .item {
  margin-top: 10rpx;
}