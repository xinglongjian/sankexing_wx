/* pages/profile/index.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  height: 200rpx;
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}

/* 九宫格 */
.function-list {
  display: flex;
  flex-direction: row;
  align-items: left;
  margin-top: 10rpx;
  background-color: #fff;
  flex-wrap: wrap;
}
.list-item {
  height: 245rpx;
  width: 245rpx;
  line-height: 245rpx;
  border: 1px solid #efefef;
  text-align: center;
  vertical-align: middle;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}