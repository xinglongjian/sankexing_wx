
<form bindsubmit='formSubmit' bindreset="formReset">
  <zan-panel title="基本信息">
    <view class='zan-cell zan-field'>
      <view class='zan-cell__hd zan-field__title'>类型名称：</view>
      <input type='text' name="name" placeholder="名称" class='zan-field__input zan-cell__bd'></input>
    </view>
    <view class='zan-cell zan-field'>
      <view class='zan-cell__hd zan-field__title'>类型描述：</view>
      <input type='text' name="description" placeholder="类型描述" class='zan-field__input zan-cell__bd'></input>
    </view>
    <view class='zan-cell zan-field'>
      <view class='zan-cell__hd zan-field__title'>是否启用：</view>
       <switch name="status" checked='true'/> 
    </view>

  </zan-panel>

  <zan-button-group>
    <button type="primary" form-type="submit">提交表单</button>
  </zan-button-group>
</form>


