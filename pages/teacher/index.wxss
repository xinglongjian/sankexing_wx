/* pages/teacher/index.wxss */
.head {
  width: 100%;
  height: 300px;
  background: #fff;
}
.head .backimage {
  width: 100%;
  height: 200px;
} 
.head .headimage {
  position: relative;
  top: -50px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.head .headimage image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.head .info{
  margin-top: 15px;
}

/*----------当前班级------------*/
.currgrades {
  margin-top: 15px;
  border: 1px;
  width: 100%;
  height: 200rpt;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.currgrades .title{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  justify-content: space-between; 
  padding-left: 10px;
  padding-right: 10px;
}

.currgrades .title text {
  width: 50%;
}
.currgrades .title image {
  width: 16px;
  height: 16px;
}

